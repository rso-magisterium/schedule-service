generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Repeat {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

model ScheduleEntry {
  id        String    @id @default(uuid()) @db.Uuid
  tenantId  String    @db.Uuid
  classroom String    @db.Uuid
  start     DateTime
  end       DateTime
  repeat    Repeat
  repeatEnd DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
